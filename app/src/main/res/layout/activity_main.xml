<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C8783">

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFF"
        android:gravity="center|right"
        android:text="0"
        android:textSize="70dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Resultado"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/row1"
            android:layout_weight="1">

            <Button
                android:id="@+id/siete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="7"
                android:textSize="48sp" />

            <Button
                android:id="@+id/ocho"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="8"
                android:textSize="48sp" />

            <Button
                android:id="@+id/nueve"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="9"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Divicion"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="performOperation"
                android:text="/"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/row2"
            android:layout_weight="1">

            <Button
                android:id="@+id/cuatro"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="4"
                android:textSize="48sp" />

            <Button
                android:id="@+id/cinco"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="5"
                android:textSize="48sp" />

            <Button
                android:id="@+id/seis"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="6"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Mult"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="performOperation"
                android:text="x"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/row3"
            android:layout_weight="1">

            <Button
                android:id="@+id/uno"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/dos"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="2"
                android:textSize="48sp" />

            <Button
                android:id="@+id/tres"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="3"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Menos"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="performOperation"
                android:text="â€“"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/row4"
            android:layout_weight="1">

            <Button
                android:id="@+id/cero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clearDisplay"
                android:text="0"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Punto"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="numberPressed"
                android:text="."
                android:textSize="48sp" />

            <Button
                android:id="@+id/Igual"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="performOperation"
                android:text="="
                android:textSize="48sp" />

            <Button
                android:id="@+id/Mas"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="performOperation"
                android:text="+"
                android:textSize="48sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>